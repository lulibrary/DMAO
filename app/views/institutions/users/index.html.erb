<% content_for :title, 'Institution Users' %>

<div class="col-md-12">

  <div class="box table-responsive">
    <div class="box-body no-padding">
      <table class="table table-striped table-hover table-align-center">
        <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @institution_users.each do |user| %>
            <tr>
              <th scope="row"><%= user.name %></th>
              <td><%= user.email %></td>
              <td>
                <div class="btn-group">
                  <%= link_to(institution_user_path(id: user), data: {title: "Show", toggle: "tooltip", container: "body"}, class: "btn btn-default") do %>
                      <i class="fa fa-file-text"></i>
                  <% end %>
                  <%= link_to(edit_institution_user_path(id: user), data: {title: "Edit", toggle: "tooltip", container: "body"}, class: "btn btn-default") do %>
                      <i class="fa fa-edit"></i>
                  <% end %>
                  <%= link_to(institution_user_path(id: user), method: :delete, data:{confirm:"Are you sure you want to delete '#{user.name}'.", title: "Delete", toggle: "tooltip", container: "body"}, class: "btn btn-default") do %>
                      <i class="fa fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
