<div class="col-md-12">

  <div class="box table-responsive">
    <div class="box-body no-padding">
      <table class="table table-striped table-hover table-align-center">
        <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Version</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @cris_systems.each do |cris_system| %>
            <tr>
              <td scope="row"><%= cris_system.name %></td>
              <td><%= cris_system.description %></td>
              <td><%= cris_system.version %></td>
              <td>
                <div class="btn-group">
                  <%= link_to(admin_systems_cris_system_path(cris_system), data: {title: "Show", toggle: "tooltip", container: "body"}, class: "btn btn-default") do %>
                      <i class="fa fa-file-text"></i>
                  <% end %>
                </div>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
