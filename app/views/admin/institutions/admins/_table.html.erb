<div class="col-md-12">

  <div class="box table-responsive">
    <div class="box-body no-padding">
      <table class="table table-striped table-hover table-align-center">
        <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @institution_admins.each do |admin| %>
            <tr>
              <th scope="row"><%= admin.name %></th>
              <td><%= admin.email %></td>
              <td>
                <div class="btn-group">
                  <%= link_to(admin_institution_admin_path(@institution, admin), data: {title: "Show", toggle: "tooltip", container: "body"}, class: "btn btn-default") do %>
                      <i class="fa fa-file-text"></i>
                  <% end %>
                  <%= link_to(edit_admin_institution_admin_path(@institution, admin), data: {title: "Edit", toggle: "tooltip", container: "body"}, class: "btn btn-default") do %>
                      <i class="fa fa-edit"></i>
                  <% end %>
                </div>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
